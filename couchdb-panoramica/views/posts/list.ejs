<h2>Posts</h2>

<a href='/posts/new'>New Post</a>

<ul>
    <%
      posts.forEach( function(post) { %>

    <li>
        <div class='post'>
            <h2><a href='/posts/<%= post._id %>'><%= post.title %></a></h2>
            <p>
               <%= post.body %>
            </p>
        </div>
    </li>
    <%  }) %>


</ul>

