<a href='/posts'>Home</a>

<h1><%= (!!locals.post)?post.title:"" %></h1>

<%if (locals.post) { %>
<div class='post-content'>
    <%= post.body %>
</div>
<%}%>

<div>
    <h2>Comentarios</h2>
    <ul id='comments'>
        <%
        if (locals.post && post.comments)
        post.comments.forEach(function(comentario) { %>
        <li>
            <div>
                Author: <span class='author'><%= comentario.author%></span>
            </div>
            <div>
                <%= comentario.body%>
            </div>
        </li>

       <% })%>
        <% if (locals.post && !post.comments){ %>

        No hay comentarios todav√≠a
        <%}%>


    </ul>
</div>

<form method='post' action='/posts/<%= id%>/comments'>
    <fieldset>
        <legend>Escribe tu comentario</legend>

        <div>
            <label for='author'>Nombre</label>
            <input name='author' />
        </div>

        <div>
            <label for='body'>Tu comentario</label>
            <input name='body' />
        </div>

        <div class='buttons'>
            <input type='submit' value='Post Comment' />
        </div>
    </fieldset>
</form>